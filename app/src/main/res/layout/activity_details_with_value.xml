<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/activityComics_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/marvel_regular"
        android:gravity="center"
        android:letterSpacing=".1"
        android:lines="2"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        card_view:layout_constraintBottom_toTopOf="@+id/containerComics_imageView_thumbnail"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        tools:text="TONY STARK" />

    <ImageView
        android:id="@+id/containerComics_imageView_thumbnail"
        android:layout_width="0dp"
        android:layout_height="314dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:clickable="true"
        android:focusable="true"
        card_view:layout_constraintBottom_toTopOf="@+id/activityDetails_textView_description"
        card_view:layout_constraintHorizontal_bias="0.496"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/activityComics_textView_name"
        tools:ignore="ContentDescription"
        tools:srcCompat="@tools:sample/avatars" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/containerComics_materialButton_details"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/marvel_regular"
        android:text="DETALHES"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        card_view:icon="@drawable/ic_arrow_forward_black_24dp"
        card_view:iconGravity="end"
        card_view:iconTint="@color/colorWhite"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activityDetails_textView_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:ellipsize="end"
        android:fontFamily="@font/marvel_regular"
        android:maxLines="3"
        android:text="Tony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony StarkTony Stark"
        android:textAlignment="viewStart"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        card_view:layout_constraintBottom_toTopOf="@+id/containerComics_materialButton_details"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/containerComics_imageView_thumbnail" />


</androidx.constraintlayout.widget.ConstraintLayout>